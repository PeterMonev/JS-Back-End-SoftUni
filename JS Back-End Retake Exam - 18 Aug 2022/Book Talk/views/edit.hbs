

    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
      {{#if errors}}
    <div>
        <div class="errorContainer">
            {{#each errors}}
            <p>{{this}}</p>
            {{/each}}
        </div>
    </div> 
    {{/if}}

    <section class="edit-form-container">
       {{#with book}}
        <form action="/books/{{_id}}/edit" method="post">
            <h3>Edit Book Review</h3>
            <label>Title</label>
            <input type="text" name="title" class="box" value="{{title}}" id="">
            <label>Author</label>
            <input type="text" name="author" class="box" value="{{author}}" id="">
            <label>Genre</label>
            <input type="text" name="genre" class="box" value="{{author}}" id="">
            <label>Stars</label>
            <input type="number" name="stars" class="box" value="{{stars}}" id="">
            <label>Image</label>
            <input type="text" name="imageUrl" class="box" value="{{imageUrl}}" id="">
            <label>Review</label>
            <textarea class="box"
                name="review">{{review}}</textarea>
            <input type="submit" value="Edit" class="btn">
        </form>
        {{/with}}
    </section>
