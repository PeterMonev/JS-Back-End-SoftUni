  <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
       {{#if errors}}
    <div>
        <div class="errorContainer">
            {{#each errors}}
            <p>{{this}}</p>
            {{/each}}
        </div>
    </div> 
    {{/if}}

    <section class="register-form-container">

        <form action="/auth/register" method="post">
            <h3>Register</h3>
            <label>Email</label>
            <input type="email" name="email" class="box" id="" value="{{body.email}}">
            <label>Username</label>
            <input type="text" name="username" class="box" id="" value="{{body.username}}">
            <label>Password</label>
            <input type="password" name="password" class="box" id="">
            <label>Confirm Password</label>
            <input type="password" name="repass" class="box" id="">
            <input type="submit" value="Register" class="btn">
            <p>Have an account ? <a href="/auth/login">Click here</a></p>
        </form>
    </section>

